{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src", "src/lib"],
  "exclude": ["node_modules"]
}
